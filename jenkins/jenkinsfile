pipeline {
    agent any

    stages {
        stage('Test') {
            steps {
                sh 'python tests/test.py'
            }
        post {
           success{
               echo "======== test successfully========"
        }
           failure{
               echo "======== test failed========"
        }
     }
        }
    
     stage('Deploy') {
         steps{
            withEnv(["PATH=$PATH:/usr/bin/docker-compose"]){
                sh(
                    script:'docker-compose build && docker-compose -p deploy up -d ')

                }
         }
            }
        }
    }


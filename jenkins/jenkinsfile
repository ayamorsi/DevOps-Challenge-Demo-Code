pipeline {
    agent any
        environment {
        PATH = "$PATH:/usr/bin/docker-compose"
    }
    stages {
        stage('Test') {
            steps {
                sh 'python tests/test.py'
            }
        post {
           success{
               echo "======== test success========"
        }
           failure{
               echo "======== test failed========"
        }
     }
        }
    
     stage('Deploy') {
         steps{
                sh 'docker-compose build && docker-compose -p deploy up -d '
         }
            }
        }
    }


pipeline {
    agent any
     environment {
                ENV_TYPE = 'DEV'
                HOST = 'localhost'
                PORT = '8000'
                REDIS_HOST = 'redis'
                REDIS_PORT = '6379'
                REDIS_DB = '0'
            }

    stages {
        stage('Test') {
            steps {
                sh 'python tests/test.py'
            }
        post {
           success{
               echo "======== test successfully========"
        }
           failure{
               echo "======== test failed========"
        }
     }
        }
    
     stage('Deploy') {
            steps{
                steps {
                sh 'docker-compose build && docker-compose -p deploy up -d '
                }
            }
        }
    }
}
